<h3>Comments</h3>
<% @article.comments.each do |comment| %>
	  <p>
	    <strong>Commenter:</strong>
	    <%= comment.commenter %>
	  </p>
	 
	  <p>
	    <strong>Comment:</strong>
	    <%= comment.body %>
	  </p>
		
		<%# Minha versão: %>
	   <%# link_to 'Delete', article_comment_path(@article.id, comment.id), :method => :delete, :data => { :confirm => 'Are you sure?' } %>

	   <%# Versão utilizada pelo site %>
	   <%= link_to 'Delete',  [comment.article, comment], :method => :delete, :data => { :confirm => 'Are you sure?' } %>
<% end %>

<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>